<h2 class="mt-3">Sign in</h2>

<%= render partial: 'layouts/flash_errors'%>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <div class="form-group">
    <%=f.label :username%>
    <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
  </div>

  <%= f.submit "login", class: "btn btn-primary" %>
<% end %>
