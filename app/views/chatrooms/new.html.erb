<h2 class="mt-3">Create a Chatroom</h2>

<%= render partial: 'layouts/flash_errors'%>

<%= form_for @chatroom, url: chatrooms_path, method: :post do |f| %>
  <div class="form-group">
    <%=f.label :topic%>
    <%= f.text_field :topic, class: "form-control", placeholder: "Enter a topic" %>
  </div>

  <div class="form-group">
    <%=f.label :slug%>
    <%= f.text_field :slug, class: "form-control", placeholder: "Enter a slug" %>
  </div>

  <%= f.submit "Create chatroom", class: "btn btn-primary" %>
<% end %>
