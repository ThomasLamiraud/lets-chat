<div class="">
  <h1>Bienvenue dans lets chat</h1>
</div>

<div class="">
  <% if current_user %>
    <p>Bonjour <%= current_user.username %></p>
    <%= link_to "Logout", logout_path, method: "delete" %>
  <% else %>
    <%= link_to "Login User", login_path %>
    OR
    <%= link_to "Create User", signup_path %>
  <% end %>
</div>

<!-- when authenticate -->
<% if current_user %>
  <div class="">
    <!-- form to create the chat room  -->
  </div>

  <% if @chatrooms.empty? %>
    <div class="">
      <p>No chatroom available</p>
      <%= link_to "Create a chatroom", new_chatroom_path %>
    </div>
  <% else %>
    <%= link_to "Create a chatroom", new_chatroom_path %>
    <div class="">
      <p>Chatrooms available : </p>
    </div>

    <ul>
      <% @chatrooms.each do |chatroom| %>
        <li>
          <%= link_to chatroom.slug, chatroom_path(chatroom.slug) %>
          <span>
            Topic:
            <%= chatroom.topic %>
          </span>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
